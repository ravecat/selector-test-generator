{
  "extends": [
    "react-app",
    "plugin:jest/recommended",
    "plugin:jsx-a11y/strict",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "typescript",
    "import"
  ],
  "parser": "typescript-eslint-parser",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "document": true,
    "window": true,
    "navigator": true,
    "it": true,
    "jest": true,
    "expect": true,
    "describe": true
  },
  "rules": {
    "react/jsx-sort-props": [2, {
      "noSortAlphabetically": false,
      "callbacksLast": true
    }]
  },
  "overrides": {
    "files": ["*.{ts,tsx}"],
    "parser": "typescript-eslint-parser",
    "rules": {
      "no-undef": "off"
    }
  }
}
