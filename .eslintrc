{
  "extends": [
    "react-app",
    "plugin:jest/recommended",
    "eslint:recommended",
    "prettier"
  ],
  "plugins": [
    "typescript",
    "import",
    "jsx-a11y"
  ],
  "parser": "typescript-eslint-parser",
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "globals": {
    "document": true,
    "window": true,
    "navigator": true,
    "it": true,
    "jest": true,
    "expect": true,
    "describe": true
  },
  "rules": {
    "no-unused-vars": [2, {
      "vars": "all",
      "args": "none",
      "ignoreRestSiblings": false
    }],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true,
      "allowTaggedTemplates": true
    }]
  },
  "overrides": {
    "files": ["*.{ts,tsx}"],
    "parser": "typescript-eslint-parser",
    "rules": {
      "no-undef": "off"
    }
  }
}
